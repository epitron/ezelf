- content_for :head do
  = javascript_include_tag 'lixel-tooltips'
  
// = ajax_throbber

#content
  %h1 Browse (grouped by Artist)

  #browser{ :style => "font-family: Tahoma" }

    - @artists.each_with_index do |artist,i|
      %div{:class=>"alternating#{i%2}", :id=>"#{artist.html_id}"}
        .artist-name
          // subtitle?
          = link_to image_tag("play16.png", :class=>"playbutton"), :controller=>"stream", :action=>"artist", :id=>artist.id
          //= link_to_remote artist.name, :url => { :action => 'expand_artist', :id => artist.id }
          = link_to_function artist.name, "expand_artist(#{artist.id});"
          
        - for album in artist.albums
          %span.cd-icon{:onmouseover=>"tooltip('#{album.name && album.name.escape_single_quotes}');", :onmouseout=>"exit();", :onclick=>"play_album(#{album.id});"}

        %div{:style=>"clear:both;"}
              
        %div{ :id=>"#{artist.html_id}_albums", :class=>"expandable", :style=>"display:none;" }
      

#right
  %h3 Help?
  %p.help
    %p All the artists! Sweet!

    %p Click the titles to expand the artist and show their albums.
  
    %p The <img src="/images/cd.gif">'s are a quick way to play albums. Click them to play!

    %p <img src="/images/play16.png"> will play everything from that artist or album.

