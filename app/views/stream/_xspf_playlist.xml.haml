%playlist{:version=>1, :xmlns=>"http://xspf.org/ns/0/"}
  %tracklist
    - for track in @tracks
      - url     = track_url(track)
      - title   = track.playlist_title
      - length  = track.length.to_i
      %track
        %location= url
        %creator= track.artist.name
        %album= track.album.name
        %title= track.title
        %duration= track.length.to_i
        %annotation= "I dunno..."
        %info= "Uploaded by: me!"
